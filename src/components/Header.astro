---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import Icon from "./Icon.astro";
---

<script>
  const $header = document.querySelector("header");
  document.addEventListener("percent", ({ detail }) => {
    if (detail < 0.05) $header?.classList.remove("satuation-filter");
    if (detail > 0.05) $header?.classList.add("satuation-filter");
  });
</script>
<header class="satuation-filter">
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links text-start">
      <HeaderLink href="/a">Retreats</HeaderLink>
      <HeaderLink href="/b">Your stay</HeaderLink>
      <HeaderLink href="/c">Getting here</HeaderLink>
      <HeaderLink href="/d">Off grid</HeaderLink>
      <HeaderLink href="/e">Getting here</HeaderLink>
    </div>
    <div class="">
      <Icon ctx="map" colour="forestgreen" />
    </div>
  </nav>
</header>
<style>
  header {
    position: fixed;
    font-family: serif;
    width: 100%;
    top: 0;
    margin: 0;
    padding: 0 1em;
    /* background-color: rgba(237, 237, 237, 0.828); */
    background-color: rgb(236 240 195 / 83%);
    backdrop-filter: blur(0.3em);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    z-index: 100;
    /* border-bottom: 0.125em solid var(--primary-green); */
    transition: filter 1s;
    &.satuation-filter {
      filter: saturate(0.35);
    }
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--primary-green);
    border-bottom: 4px solid transparent;
    text-decoration: none;
    /* font-family: "Atkinson", sans-serif; */
    font-size: smaller;
  }
  nav a.active {
    /* text-decoration: none; */
    /* border-bottom-color: var(--accent); */
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
