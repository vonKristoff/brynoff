---
interface Props {
  ctx: "map";
  size?: string;
  weight?: string;
  colour?: string;
}
const { ctx, weight = "2", size = "1", colour = "currentColor" } = Astro.props;
const href = `/sprites.svg#icon-${ctx}`;
---

<svg
  width={`${size}em`}
  height={`${size}em`}
  fill="none"
  stroke={colour}
  stroke-width={weight}
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <use {href}></use>
</svg>

<style>
  i {
    width: fit-content;
  }
  i svg {
    width: 100%;
    height: 100%;
  }
</style>
